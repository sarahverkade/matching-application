 <%- include('partials/head.ejs') %>
 <main>
     <h2>Create a new account</h2>
     <form action="/register" method="POST" enctype="multipart/form-data">
         <fieldset>
             <!--<label for="avatar">Upload a profile picture</label> 
            <input name="avatar" type="file"  accept="image/png, image/jpeg"/> -->
             <label for="name">Name</label>
             <input name="name" type="text" required>
             <label for="bio">Add a bio</label>
             <textarea rows="5" cols="50" name="bio" placeholder="Tell us something about yourself...">
             </textarea>
             <label for="email">Email adress</label>
             <input name="email" type="email" required>
             <label for="password">Password</label>
             <input name="password" type="password" required>
         </fieldset>
         <input type="submit" value="Register"/>
     </form>
    </main>